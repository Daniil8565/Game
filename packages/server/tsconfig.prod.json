{
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".", // Оставляем без src
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs" // Соответствие твоему подходу
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "**/*.test.ts", "**/*.mock.ts", "**/__test__"]
}
